#suite s21_sprintf_tests_x

#test test_1
unsigned int a = 77;
сhar res[200];
char resorig[200];
ck_assert_int_eq(s21_sprintf(res, "%x", a), sprintf(resorig, "%x", a));
ck_assert_pstr_eq(res, resorig);

