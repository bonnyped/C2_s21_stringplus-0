#test test_14
unsigned int a = 77;
unsigned int b = 7777;
unsigned int g = 777777;
short int e = 777;
long int h = 7;
сhar res[200];
char resorig[200];
ck_assert_int_eq(s21_sprintf(res, "%*x%*.*x%.*x%0hx %-.100lx", 13, a, 10, 12, b, 0, g, e, h), sprintf(resorig, "%*x%*.*x%.*x%0hx %-.100lx", 13, a, 10, 12, b, 0, g, e, h));
ck_assert_pstr_eq(res, resorig);
