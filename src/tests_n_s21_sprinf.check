#suite sprintf_test_n_for_sp

#test s_21_sprintf_n_for_1
  char res[100];
  char resorig[100];
  char format[100] = "Hello Hamlet!%n To be...";
  int a = 4; 
  int b = 4;
  ck_assert_int_eq(sprintf(res, format, &a), s21_sprintf(resorig, format, &b));
  ck_assert_str_eq(res, resorig);
  ck_assert_int_eq(a, b);

#test s_21_sprintf_n_for_2
  char res[100];
  char resorig[100];
  char format[100] = "Hello %dHamlet%n To  be %ld or %n";
  int a = 0;
  int b = 23;
  int a2 = 0;
  int b2 = 23;
  ck_assert_int_eq(sprintf(res, format, a, &a,  b, &b), s21_sprintf(resorig, format, a2, &a2,  b2, &b2));
  ck_assert_str_eq(res, resorig);
  ck_assert_int_eq(a, a2);
  ck_assert_int_eq(b, b2);

#test s_21_sprintf_n_for_3
  char res[100];
  char resorig[100];
  char format[100] = "%n To  be %hd or %n";
  int a = 0;
  int b = 23;
  int a2 = 0;
  int b2 = 23;
  ck_assert_int_eq(sprintf(res, format,  &a,  b, &b), s21_sprintf(resorig, format,  &a2,  b2, &b2));
  ck_assert_pstr_eq(res, resorig);
  ck_assert_int_eq(a, a2);
  ck_assert_int_eq(b, b2);
